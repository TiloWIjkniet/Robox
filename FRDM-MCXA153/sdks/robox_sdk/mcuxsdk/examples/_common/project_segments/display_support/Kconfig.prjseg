    config G1120B0MIPI
        bool "MIPI Circular Display G1120B0MIPI" if MCUX_DEMO_PANEL_G1120B0MIPI_SUPPORT

    config TFT_PROTO_5
        bool "MikroE TFT Proto 5 inch CAPACITIVE" if MCUX_DEMO_PANEL_TFT_PROTO_5_SUPPORT

    config RASPI_7INCH
        bool "Raspberry Pi 7 inch" if MCUX_DEMO_PANEL_RASPI_7INCH_SUPPORT

    config ZC143AC72MIPI
        bool "MIPI Circular Display ZC143AC72MIPI" if MCUX_DEMO_PANEL_ZC143AC72MIPI_SUPPORT

    config ADAFRUIT_2_8
        bool "Adafruit 2.8 inch captative panel" if MCUX_DEMO_PANEL_ADAFRUIT_2_8_SUPPORT

    config LCD_PAR_S035
        bool "LCD_PAR_S035 panel" if MCUX_DEMO_PANEL_LCD_PAR_S035_SUPPORT

    config RK043FN02H
        bool "RK043FN02H-CT" if MCUX_DEMO_PANEL_RK043FN02H_SUPPORT

    config RK043FN66HS
