    default 3 if G1120B0MIPI
    default 4 if TFT_PROTO_5
    default 5 if RASPI_7INCH
    default 6 if ZC143AC72MIPI
    default 7 if ADAFRUIT_2_8
    default 8 if LCD_PAR_S035
    default 9 if RK043FN02H
    default 10 if RK043FN66HS
    default 11 if LCD_SPEC
