    default 14 if MIPI2HDMI
    default 15 if LVDS2HDMI
    default 16 if CAP_TOUCH_LVDS
    default 17 if CAP_TOUCH_DSI
    help
        Panel selection for display support
        No prefix in generated macro

choice DISPLAY_SUPPORT_PANEL
    prompt "Panel Selection"

    config RK055AHD091
        bool "RK055AHD091-CTG" if MCUX_DEMO_PANEL_RK055AHD091_SUPPORT

    config RK055IQH091
