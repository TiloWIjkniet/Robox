    config MCUX_COMPONENT_component.psa_crypto_driver.osal
        bool "OSAL"

    config MCUX_COMPONENT_component.psa_crypto_driver.osal.frtos
        bool "OSAL FreeRTOS"
        select MCUX_COMPONENT_component.psa_crypto_driver.osal

    config MCUX_COMPONENT_component.psa_crypto_driver.osal.baremetal
        bool "OSAL Baremetal"
        select MCUX_COMPONENT_component.psa_crypto_driver.osal

    config MCUX_COMPONENT_component.psa_crypto_driver.mbedtls_thread_alt
        bool "Mbed TLS Thread Alt"

    config MCUX_COMPONENT_component.psa_crypto_driver.els_pkc.oracle.rw61x
        bool "ELS PKC Oracle RW61x"

    config MCUX_COMPONENT_component.psa_crypto_driver.els_pkc.oracle.mcxn
        bool "ELS PKC Oracle MCXN"

    config MCUX_COMPONENT_component.psa_crypto_driver.els_pkc.oracle.mimxrt
        bool "ELS PKC Oracle MIMXRT"

    config MCUX_COMPONENT_component.psa_crypto_driver.els_pkc.oracle.lpc
        bool "ELS PKC Oracle LPC"

     config MCUX_COMPONENT_component.psa_crypto_driver.els_pkc.oracle
         bool "ELS PKC Oracle"

        if MCUX_COMPONENT_component.psa_crypto_driver.els_pkc.oracle
          choice
            prompt "Platform"
            default MCUX_DEPENDENCY_COMPONENT_component.psa_crypto_driver.oracle.platform.rw61x

            config MCUX_DEPENDENCY_COMPONENT_component.psa_crypto_driver.oracle.platform.rw61x
                bool "RW61x"
                select MCUX_COMPONENT_component.psa_crypto_driver.els_pkc.oracle.rw61x
                depends on MCUX_HW_DEVICE_RW610 || MCUX_HW_DEVICE_RW612

            config MCUX_DEPENDENCY_COMPONENT_component.psa_crypto_driver.oracle.platform.mcxn
                bool "MCXN"
                select MCUX_COMPONENT_component.psa_crypto_driver.els_pkc.oracle.mcxn
                depends on MCUX_HW_DEVICE_MCXN546 || MCUX_HW_DEVICE_MCXN547 || MCUX_HW_DEVICE_MCXN946 || MCUX_HW_DEVICE_MCXN947 || MCUX_HW_DEVICE_MCXN235 || MCUX_HW_DEVICE_MCXN236 || MCUX_HW_DEVICE_MCXN247 || MCUX_HW_DEVICE_MCXN526 || MCUX_HW_DEVICE_MCXN527 || MCUX_HW_DEVICE_MCXN536 || MCUX_HW_DEVICE_MCXN537 || MCUX_HW_DEVICE_MCXN556S

            config MCUX_DEPENDENCY_COMPONENT_component.psa_crypto_driver.oracle.platform.mimxrt
                bool "MIMXRT"
                select MCUX_COMPONENT_component.psa_crypto_driver.els_pkc.oracle.mimxrt
                depends on MCUX_HW_DEVICE_MIMXRT798S || MCUX_HW_DEVICE_MIMXRT758S || MCUX_HW_DEVICE_MIMXRT735S

            config MCUX_DEPENDENCY_COMPONENT_component.psa_crypto_driver.oracle.platform.lpc
                bool "LPC"
                select MCUX_COMPONENT_component.psa_crypto_driver.els_pkc.oracle.lpc
                depends on MCUX_HW_DEVICE_LPC55S36
            endchoice
        endif


    config MCUX_COMPONENT_component.psa_crypto_driver.els_pkc.common
        bool "ELS PKC Common"

    config MCUX_COMPONENT_component.psa_crypto_driver.els_pkc.transparent
