    config MCUX_COMPONENT_component.psa_crypto_driver.casper
        bool "CASPER"
        select MCUX_COMPONENT_driver.casper

        # We provide option to have hashcrypt-only, or CASPER+hashcrypt, but CASPER-only is not available.
        select MCUX_COMPONENT_component.psa_crypto_driver.hashcrypt

        # Casper requires the bignum module of mbedtls3x, hence this dependency
        select MCUX_COMPONENT_middleware.mbedtls3x.crypto.no_psa

        if MCUX_COMPONENT_component.psa_crypto_driver.casper
          choice
            prompt "OSAL Selection"
            default MCUX_DEPENDENCY_COMPONENT_component.psa_crypto_driver.casper.osal_baremetal

